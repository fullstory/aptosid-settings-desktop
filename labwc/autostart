#!/bin/bash
case "$XDG_CURRENT_DESKTOP" in
    labwc:wlroots)
        ;;
    *)
        exit 0
        ;;
esac

kanshi >/dev/null 2>&1 &
swaybg -m fill -i /usr/share/wallpapers/aptosid-nemesis-wide.png >/dev/null 2>&1 &
[[ ! -d ~/.config/sfwbar/ ]] && {
    mkdir -p ~/.config/sfwbar/
    cp /usr/share/sfwbar/w10.config ~/.config/sfwbar/sfwbar.config
}
sfwbar >/dev/null 2>&1 &
mate-polkit >/dev/null 2>&1 &
mako >/dev/null 2>&1 &
swayidle -w \
        timeout 300 'gtklock -i' \
        timeout 600 'wlopm --off \*' \
        resume 'wlopm --on \*' \
        before-sleep 'gtklock -i' >/dev/null 2>&1 &
